<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.svtplay.se"
       name="SvtPlay.se"
       version="0.1.1"
       provider-name="XBMC">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Watch content from SvtPlay.se</summary>
    <summary lang="sv">Se på innehåll från SvtPlay.se</summary>
    <description lang="en">This plugin accesses content from svtplay.se. To download, you need an additional program.</description>
    <description lang="sv">Det här plugin'et läser innehåll svtplay.se. För att ladda ner behöver ett extra program.</description>
    <platform>all</platform>
  </extension>
</addon>
